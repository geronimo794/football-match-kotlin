<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/container_item"
        app:cardBackgroundColor="@color/colorBGCardView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/cardViewItemEvent">
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp">
            <TextView
                    android:id="@+id/txtvwDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sat, 22 Dec 2018"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorVS"
                    android:textStyle="bold"/>
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/ic_alarm_bell"
                    app:layout_constraintRight_toRightOf="@+id/txtvwDate"
                    android:id="@+id/setReminder"/>
        </android.support.constraint.ConstraintLayout>
        <TextView
                android:id="@+id/txtvwHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="21:00"
                android:gravity="center_horizontal"
                android:textColor="@color/colorVS"
                android:textStyle="bold"
                android:padding="3dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3">

                <TextView
                        android:id="@+id/txtvwHomeTeam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Manchester City"
                        android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1">

                <TextView
                        android:id="@+id/txtvwHomeScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="18sp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorScore"
                        android:layout_marginTop="2dp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="VS"
                        android:gravity="center"
                        android:textColor="@color/colorVS"
                        android:layout_marginTop="2dp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1">

                <TextView
                        android:id="@+id/txtvwAwayScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:gravity="center_horizontal"
                        android:textSize="18sp"
                        android:textColor="@color/colorScore"
                        android:layout_marginTop="2dp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3">

                <TextView
                        android:id="@+id/txtvwAwayTeam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mancester United"
                        android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>


