<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayoutEventItem"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:background="@drawable/container_item">
    <TextView
            android:id="@+id/txtvwDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sat, 22 Dec 2018"
            android:gravity="center_horizontal"
            android:textColor="@color/colorVS"
            android:textStyle="bold"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3">

            <TextView
                    android:id="@+id/txtvwHomeTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manchester Unitaaaaaaaaaaaaaaaaed"
                    android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1">

            <TextView
                    android:id="@+id/txtvwHomeScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="18sp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorScore"
                    android:layout_marginTop="2dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VS"
                    android:gravity="center"
                    android:textColor="@color/colorVS"
                    android:layout_marginTop="2dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1">

            <TextView
                    android:id="@+id/txtvwAwayScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textColor="@color/colorScore"
                    android:layout_marginTop="2dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3">

            <TextView
                    android:id="@+id/txtvwAwayTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manchester aaaaaaaaaaaaaaaaaaaaaa aaUnited"
                    android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
