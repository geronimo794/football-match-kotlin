<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
    <TextView
            android:id="@+id/txtvwDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sat, 22 Dec 2018"
            android:gravity="center_horizontal"
            android:textColor="@color/colorDate"
            android:textStyle="bold"/>
    <TextView
            android:id="@+id/textViewHour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="21:00 WIB"
            android:gravity="center_horizontal"
            android:textColor="@color/colorDate"
            android:textStyle="bold"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/FrameLayoutHomeTeamLogo">

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1">

            <TextView
                    android:id="@+id/txtvwHomeScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorScore"
                    android:layout_marginTop="2dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VS"
                    android:gravity="center"
                    android:textColor="@color/colorVS"
                    android:layout_marginTop="2dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1">

            <TextView
                    android:id="@+id/txtvwAwayScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:textColor="@color/colorScore"
                    android:layout_marginTop="2dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/FrameLayoutAwayTeamLogo">
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
        <TextView
                android:id="@+id/txtvwHomeTeam"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Manchester Unitaaaaaaaaaaaaaaaaed"
                android:gravity="center"
                android:textSize="17sp"
                android:textStyle="bold"/>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">
        </LinearLayout>
        <TextView
                android:id="@+id/txtvwAwayTeam"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Manchester Unitaaaaaaaaaaaaaaaaed"
                android:gravity="center"
                android:textSize="17sp"
                android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
        <TextView
                android:id="@+id/txtvwHomeGoalDetails"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Joko "
                android:gravity="center"/>
        <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:text="Goals"
                android:gravity="center"
                android:textColor="@color/colorVS"/>
        <TextView
                android:id="@+id/txtvwAwayGoalDetails"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Bambang hardianto, Rudi Sujatmiko"
                android:gravity="center"/>

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
        <TextView
                android:id="@+id/txtvwHomeShots"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="1"
                android:gravity="center"/>
        <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:text="Shots"
                android:gravity="center"
                android:textColor="@color/colorVS"/>
        <TextView
                android:id="@+id/txtvwAwayShots"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="2"
                android:gravity="center"/>

    </LinearLayout>


    <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Line Up"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorVS"/>
    <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorLineBrown"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
        <TextView
                android:id="@+id/txtvwHomeLineupGoalkeeper"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Joko "
                android:gravity="center"/>
        <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:text="Goal Keeper"
                android:gravity="center"
                android:textColor="@color/colorVS"/>
        <TextView
                android:id="@+id/txtvwAwayLineupGoalkeeper"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Bambang hardianto, Rudi Sujatmiko"
                android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
        <TextView
                android:id="@+id/txtvwHomeLineupDefense"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Joko "
                android:gravity="center"/>
        <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:text="Deffense"
                android:gravity="center"
                android:textColor="@color/colorVS"/>
        <TextView
                android:id="@+id/txtvwAwayLineupDefense"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Bambang hardianto, Rudi Sujatmiko"
                android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
        <TextView
                android:id="@+id/txtvwHomeLineupMidfield"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Joko "
                android:gravity="center"/>
        <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:text="Mid Fields"
                android:gravity="center"
                android:textColor="@color/colorVS"/>
        <TextView
                android:id="@+id/txtvwAwayLineupMidfield"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Bambang hardianto, Rudi Sujatmiko"
                android:gravity="center"/>

    </LinearLayout>
</LinearLayout>
